.g-project-block
    border-radius 3px
    background-color #fafafc
    border 1px solid #eaeaea
    box-shadow inset 0 0 2px 2px #f4f4f4
    margin-bottom 15px
    padding 5px 10px

    .g-project-title
        font-size 17px
        font-weight bold
        border-bottom 1px solid #ccc

    .g-project-delete
        position absolute
        top 5px
        right 15px
        display none

    .g-project-content
        color #666
        font-size 16px
        font-style normal
        height 100px;
        overflow scroll
        margin 5px 0

    .g-project-foot
        position relative
        font-style italic;
        padding 0
        border-top 1px solid #ccc

        span
            margin-left 20px

.g-project-block.g-selected
    background-color #d9534f
